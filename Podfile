# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'TCMS' do
 	# Comment the next line if you're not using Swift and don't want to use dynamic frameworks
 	use_frameworks!

 	# Pods for TCMS
    # Pods for MBNA
    def commonPods
        # Pods for SnackableTV
        # UI
        pod 'SDWebImage'
        pod 'KYDrawerController'
        pod 'JTAppleCalendar'
        
        # Coding
        pod 'RxSwift'
        pod 'RxCocoa'
        # pod 'Aspects'

        # networking
        pod 'Alamofire'
        pod 'AlamofireObjectMapper'
        pod 'ObjectMapper'

        # utility
        pod 'Locksmith'
        pod 'CocoaLumberjack'
        pod 'ACKit', :git => 'https://github.com/austinzmchen/ACKit.git'
#        pod 'ACKit', :path => 'ACKit'
       
        # deployment
        pod 'Fabric'
        pod 'Crashlytics'
    end

    commonPods
end
